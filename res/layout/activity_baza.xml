<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#232323"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Baza" >

    <TextView
        android:id="@+id/tytul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="16sp"
        android:textColor="#FFF"
        android:text="@string/tytul" />
    
    <Button
        android:id="@+id/dodaj"
        android:minHeight="64dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tytul"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="#695b8e"
        android:textSize="16sp"
        android:textColor="#FFF"
        android:text="@string/dodaj" />
    <Button
        android:id="@+id/wyswietl"
        android:minHeight="64dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dodaj"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="2dp"
        android:background="#695b8e"
        android:textSize="16sp"
        android:textColor="#FFF"
        android:text="@string/wyswietl" />    
    <Button
        android:id="@+id/wyjdz"
        android:minHeight="64dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/wyswietl"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="2dp"
        android:background="#695b8e"
        android:textSize="16sp"
        android:textColor="#FFF"
        android:text="@string/powrotDoMenu" />

</RelativeLayout>
